    "version": "0.2.0",
    "configurations": [
        {
            "name": "Homework1 Debug",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/Homework1/homework1",
            "args": [],
            "stopAtEntry": false,
            "cwd": "${workspaceFolder}",
            "environment": [],
            "osx": {
                "MIMode": "lldb",
                "externalConsole": true,
            },
            "linux": {
                "MIMode": "gdb",
                "externalConsole": false,
            },
            "setupCommands": [
                {
                    "description": "Enable pretty-printing for debugging",
                    "text": "-enable-pretty-printing",
                    "ignoreFailures": true
                }
            ]
        },
        {
            "name": "MPI Matrix Debug",
